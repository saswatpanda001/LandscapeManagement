<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LandscapeManagement.Views.NewFolder2.AddBookings">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Add New Booking" FontSize="24" FontAttributes="Bold" TextColor="#2980B9" HorizontalOptions="Center"/>

            <Entry x:Name="EntryCustomerName" Placeholder="Enter Customer Name" FontSize="18"/>
            <Entry x:Name="EntryBookingDate" Placeholder="Enter Booking Date (e.g., March 1, 2025)" FontSize="18"/>
            <Entry x:Name="EntryService" Placeholder="Enter Service Name" FontSize="18"/>

            <Button Text="Save Booking" BackgroundColor="#27AE60" TextColor="White" FontSize="18" Clicked="OnSaveBookingClicked"/>
            <Button Text="Cancel" BackgroundColor="#E74C3C" TextColor="White" FontSize="18" Clicked="OnCancelClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>