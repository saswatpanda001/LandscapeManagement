<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LandscapeManagement.Views.NewFolder2.ManageUserPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <!-- Add New User Button -->
            <Button Text="Add New User" 
                BackgroundColor="#009688" 
                TextColor="White" 
                CornerRadius="10" 
                HeightRequest="50"
                Clicked="OnAddNewUserClicked"/>

            <!-- Users List -->
            <ListView x:Name="UsersListView" SeparatorVisibility="None" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#F0F0F0" 
                               CornerRadius="10" 
                               Padding="10" 
                               Margin="5" 
                               HasShadow="True">
                                <Grid ColumnSpacing="10" RowSpacing="5">
                                    <!-- Define rows -->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- Define two columns: main content and action buttons -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Row 0: User Name and Action Buttons -->
                                    <Label Grid.Row="0" Grid.Column="0" 
                                       Text="{Binding name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#333"/>
                                    <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" 
                                             VerticalOptions="Center" Spacing="10">
                                        <Button Text="Edit" 
                                            BackgroundColor="#3F51B5" 
                                            TextColor="White" 
                                            CornerRadius="5" 
                                            Clicked="OnEditUserClicked" 
                                            CommandParameter="{Binding user_id}"/>
                                        <Button Text="Delete" 
                                            BackgroundColor="#F44336" 
                                            TextColor="White" 
                                            CornerRadius="5" 
                                            Clicked="OnDeleteUserClicked" 
                                            CommandParameter="{Binding user_id}"/>
                                    </StackLayout>

                                    <!-- Row 1: Email -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding email}" 
                                       FontSize="14" 
                                       TextColor="#666"/>
                                    <!-- Row 2: Phone -->
                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding phone}" 
                                       FontSize="14" 
                                       TextColor="#666"/>
                                    <!-- Row 3: Role -->
                                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding role}" 
                                       FontSize="14" 
                                       TextColor="#666"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>