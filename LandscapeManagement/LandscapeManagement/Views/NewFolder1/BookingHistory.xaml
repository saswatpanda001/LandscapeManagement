<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LandscapeManagement.Views.BookingHistory"
             BackgroundColor="#F5F5F5">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Booking History"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <ListView x:Name="BookingListView"
                      HasUnevenRows="True"
                      SeparatorVisibility="None">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame CornerRadius="12"
                                   Padding="15"
                                   Margin="5"
                                   BackgroundColor="White"
                                   HasShadow="True">

                                <StackLayout Spacing="8">
                                    <Label Text="{Binding Service.service_name}" 
                                           FontSize="20" 
                                           FontAttributes="Bold"
                                           TextColor="#2980B9"/>

                                

                                
                                    <Label Text="{Binding booking_date, StringFormat='{0:MMMM d, yyyy}'}" 
                                           FontSize="16" 
                                           TextColor="#7F8C8D"/>

                                    <Frame Padding="5"
                                           CornerRadius="5"
                                           BackgroundColor="Purple"
                                           HorizontalOptions="Start">
                                        <Label Text="{Binding status}" 
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="White"/>
                                    </Frame>

                                </StackLayout>

                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
