<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LandscapeManagement.Views.NewFolder1.PasswordReset">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Reset Password" FontSize="26" FontAttributes="Bold"
                   TextColor="#E74C3C" HorizontalOptions="Center"/>

            <Entry x:Name="emailEntry" Placeholder="Enter your email" Keyboard="Email" BackgroundColor="#ECF0F1"/>
            <Entry x:Name="newPasswordEntry" Placeholder="Enter New Password" IsPassword="True" BackgroundColor="#ECF0F1"/>
            <Entry x:Name="confirmPasswordEntry" Placeholder="Confirm New Password" IsPassword="True" BackgroundColor="#ECF0F1"/>

            <Label x:Name="errorLabel" TextColor="Red" IsVisible="False" />

            <Button Text="Reset Password" BackgroundColor="#F39C12" TextColor="White" 
                    FontSize="18" CornerRadius="10" Clicked="OnResetPasswordClicked"/>

            <Button Text="Back to Login" BackgroundColor="#3498DB" TextColor="White" FontSize="16" CornerRadius="10"
                    Clicked="OnBackToLoginClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
